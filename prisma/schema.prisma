// Prisma schema pour Ink Creative

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Contact {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String
  company   String?
  message   String
  source    String   @default("website_form")
  createdAt DateTime @default(now())
  
  @@map("contacts")
}
